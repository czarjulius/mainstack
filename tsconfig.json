{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,

    "sourceMap": true,
    "outDir": "./build",

    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@config": ["./config"],
      "@config/*": ["./config/*"],
      "@db/*": ["./db/*"],
      "@helpers/*": ["./helpers/*"],
      "@modules/*": ["./modules/*"],
      "@middlewares/*": ["./middlewares/*"],
      "@constants/*": ["./constants/*"]
    },
    "types": ["@types/jest"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
